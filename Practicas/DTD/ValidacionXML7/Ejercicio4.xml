<!DOCTYPE resoluciones [
	<!ELEMENT resoluciones (resolution+)>
	<!ELEMENT resolution EMPTY>
	<!ATTLIST resolution
		nombre NMTOKEN #REQUIRED
		alto CDATA #REQUIRED
		ancho CDATA #REQUIRED>
]>
<!-- Contenedor de resoluciones -->
<resoluciones>
	<!-- Resolucion individual con atributos descriptivos -->
	<resolution nombre="VGA" alto="480" ancho="640" />
	<resolution nombre="XGA" alto="768" ancho="1024" />
	<resolution nombre="HD1080" alto="1080" ancho="1920" />
</resoluciones>